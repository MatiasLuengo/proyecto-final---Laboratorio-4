@model OrtopediaDM.Marca

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
<h3>Está seguro que desea eliminar?</h3>

<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.origen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.origen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imagenLogo)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(@Model.imagenLogo))
            {
                <img src="~/images/marcas/@Model.imagenLogo" class="img-thumbnail" style="max-width:75px; max-height: 75px" asp-append-version="true" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
